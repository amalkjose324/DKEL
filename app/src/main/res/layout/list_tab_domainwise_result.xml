<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginLeft="3dp"
    android:id="@+id/candidate_layout"
    android:layout_marginTop="3dp"
    android:background="@drawable/bg_list_blue"
    android:layout_marginRight="3dp"
    android:descendantFocusability="blocksDescendants">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/candidate_id"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/panel_code"
        android:layout_width="35dp"
        android:layout_height="60dp"
        android:paddingLeft="3dp"
        android:text="U     D     F"
        android:layout_marginTop="1dp"/>
    <ImageView
        android:id="@+id/icon_result"
        android:layout_marginLeft="15dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="3dp"
        android:layout_marginTop="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:orientation="vertical">
        <TextView
            android:layout_gravity="center|start"
            android:gravity="center|start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="80dp"
            android:layout_marginBottom="-7dp"
            android:hint="Candidate Name"
            android:id="@+id/candidate_name"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"/>
        <TextView
            android:layout_gravity="center|start"
            android:gravity="center|start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Domain"
            android:layout_marginBottom="-7dp"
            android:paddingLeft="80dp"
            android:id="@+id/candidate_party"
            android:textColor="@color/dark_blue"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result_id"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center|start"
                android:gravity="center|start"
                android:layout_width="0dp"
                android:layout_weight=".75"
                android:layout_height="wrap_content"
                android:hint="Party"
                android:paddingLeft="80dp"
                android:id="@+id/candidate_domain"
                android:textColor="@color/dark_blue"
                android:textSize="17sp"/>
            <TextView
                android:layout_gravity="center|start"
                android:gravity="center|end"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="wrap_content"
                android:hint="#votes"
                android:paddingRight="15dp"
                android:id="@+id/candidate_votes"
                android:textColor="@color/dark_blue"
                android:textSize="17sp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.deepika.keralaelectionlive.MainActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
           <com.github.mikephil.charting.charts.PieChart
               android:id="@+id/domainwise_analysis_pie"
               android:layout_width="match_parent"
               android:minHeight="100dp"
               android:layout_height="0dp"
               android:layout_weight=".5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:textAlignment="center"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/bg_table"
                    android:text="Total Votes"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:layout_weight=".3"
                    android:id="@+id/total_votes"
                    android:background="@drawable/bg_table"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="3dp"
                android:layout_marginBottom="7dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_table"
                    android:text="Labels"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:text="Votes"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:padding="2dp"
                    android:layout_weight=".4"
                    android:textStyle="bold"
                    android:background="@drawable/bg_table"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:text="Percentage"
                    android:textAlignment="center"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:layout_weight=".3"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/bg_table"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:textAlignment="center"
                    android:padding="2dp"
                    android:textColor="@color/udf_green"
                    android:background="@drawable/bg_table"
                    android:text="UDF"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:padding="2dp"
                    android:layout_weight=".4"
                    android:background="@drawable/bg_table"
                    android:id="@+id/udf_vote"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:text="0%"
                    android:textAlignment="center"
                    android:padding="2dp"
                    android:id="@+id/udf_percentage"
                    android:layout_weight=".3"
                    android:background="@drawable/bg_table"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:textAlignment="center"
                    android:textColor="@color/ldf_red"
                    android:padding="2dp"
                    android:background="@drawable/bg_table"
                    android:text="LDF"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:padding="2dp"
                    android:layout_weight=".4"
                    android:id="@+id/ldf_vote"
                    android:background="@drawable/bg_table"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:text="0%"
                    android:textAlignment="center"
                    android:padding="2dp"
                    android:layout_weight=".3"
                    android:id="@+id/ldf_percentage"
                    android:background="@drawable/bg_table"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:textAlignment="center"
                    android:padding="2dp"
                    android:textColor="@color/nda_orange"
                    android:background="@drawable/bg_table"
                    android:text="NDA"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:id="@+id/nda_vote"
                    android:padding="2dp"
                    android:layout_weight=".4"
                    android:background="@drawable/bg_table"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:text="0%"
                    android:textAlignment="center"
                    android:padding="2dp"
                    android:id="@+id/nda_percentage"
                    android:layout_weight=".3"
                    android:background="@drawable/bg_table"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:textAlignment="center"
                    android:textColor="@color/oth_blue"
                    android:padding="2dp"
                    android:background="@drawable/bg_table"
                    android:text="OTH"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:padding="2dp"
                    android:id="@+id/oth_vote"
                    android:layout_weight=".4"
                    android:background="@drawable/bg_table"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:text="0%"
                    android:textAlignment="center"
                    android:padding="2dp"
                    android:id="@+id/oth_percentage"
                    android:layout_weight=".3"
                    android:background="@drawable/bg_table"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
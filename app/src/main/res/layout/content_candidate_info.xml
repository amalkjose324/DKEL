<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CandidateInfoActivity"
    tools:showIn="@layout/app_bar_candidate_info">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="7dp"
        android:background="@drawable/bg_list_red"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/panel_code"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_rect_red"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:text="L     D     F"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="21dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_result"
                    android:layout_width="145dp"
                    android:layout_height="165dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/roundedrectanglebg"
                    android:padding="3dp"
                    android:src="@color/colorAccent" />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/roundbg"
                    android:layout_marginLeft="-144dp"
                    android:layout_marginTop="112dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="159dp"
                    android:layout_marginLeft="91dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/candidate_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:gravity="center"
                        android:text="Lead By votes"
                        android:textColor="@color/dark_blue"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/candidate_vote_dif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="176"
                        android:textColor="@color/colorAccent"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:gravity="center"
                        android:text="Total Votes"
                        android:textColor="@color/dark_blue"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/candidate_domain1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_gravity="center|start"
                        android:layout_marginBottom="-7dp"
                        android:gravity="center"
                        android:text="25000"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/candidate_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginTop="-5dp"
                    android:gravity="center"
                    android:text="Candidate Name"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/candidate_domain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginTop="-3dp"
                    android:gravity="center"
                    android:text="Domain"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/candidate_party"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginTop="-3dp"
                    android:gravity="center"
                    android:text="Party"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_1round_rect_red"
                    android:text="#9"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_gravity="right|bottom"
                    android:layout_marginTop="-37dp"
                    android:layout_marginRight="6dp"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/hellotest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Helf" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:id="@+id/buttonSelected" android:color="@color/white">
        <shape>
            <solid android:color="@color/green" />
            <stroke android:width="2px" android:color="@color/colorPrimaryDark" />
            <corners android:radius="15dp"/>

        </shape>
    </item>
    <item android:state_checked="false" android:id="@+id/buttonNotSelected" android:color="@color/black">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
            <stroke android:width="2px" android:color="@color/colorPrimaryDark" />
            <corners android:radius="15dp"/>
        </shape>
    </item>
</selector>